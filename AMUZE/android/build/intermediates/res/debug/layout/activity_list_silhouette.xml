<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amuze_red"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">
    <!--android:paddingTop="?attr/actionBarSize"-->
    <TextView
        android:id="@+id/current_gold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Current Gold: "
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#fff6f0f0" />

    <ListView
        android:id="@+id/listview_silhouette"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="10"
        android:choiceMode="singleChoice"
        android:elevation="6dp" />

</LinearLayout><!-- From: file:/C:/Users/agust/Desktop/Kuliah/Mobdev/Amuze/android/res/layout/activity_list_silhouette.xml -->