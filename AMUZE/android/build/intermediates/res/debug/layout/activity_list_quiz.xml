<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amuze_red">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/amuze_red"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottom_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/current_gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Current Gold: "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#fff6f0f0" />

        <LinearLayout
            android:id="@+id/quiz_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_once"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/notification_large_icon_height"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/quiz_easy"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quiz_status_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Status"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#fff6f0f0" />

                <TextView
                    android:id="@+id/quiz_requirement_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Gold requirement"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/amuze_white" />

                <TextView
                    android:id="@+id/quiz_reward_easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Gold reward"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/amuze_white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/quiz_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_once"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/notification_large_icon_height"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/quiz_medium"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quiz_status_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Status"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#fff6f0f0" />

                <TextView
                    android:id="@+id/quiz_requirement_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Gold requirement"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/amuze_white" />

                <TextView
                    android:id="@+id/quiz_reward_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Gold reward"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/amuze_white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/quiz_hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_once"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:orientation="horizontal"
            android:padding="@dimen/appbar_padding_top">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/notification_large_icon_height"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/quiz_hard"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quiz_status_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Status"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#fff6f0f0" />

                <TextView
                    android:id="@+id/quiz_requirement_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Gold requirement"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/amuze_white" />

                <TextView
                    android:id="@+id/quiz_reward_hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Gold reward"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/amuze_white" />

            </LinearLayout>

        </LinearLayout>
